<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgg">
    <include layout="@layout/toolbar_basic"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/pg"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="10dp" />

        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="05dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:fontFamily="sans-serif"
            android:src="@drawable/government"
            android:textSize="16sp"/>

        <TextView
            android:textSize="20dp"
            android:layout_marginLeft="25dp"
            android:text="Select Yojana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/input_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Spinner
            android:id="@+id/spinner_yojava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bottom"
            android:padding="15dp"
            />

        <EditText
            android:id="@+id/edt_yojana_desc"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/edit_text_top"
            android:hint="Yojana Description"
            android:inputType="textMultiLine"
            android:padding="15dp" />

        <EditText
            android:inputType="number"
            android:id="@+id/edt_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle"
            android:hint="Launch year"
            android:maxLength="4"
            android:padding="15dp" />

        <EditText
            android:id="@+id/edt_sector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle"
            android:hint="Sector"
            android:padding="15dp" />

        <EditText
            android:id="@+id/edt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle"
            android:hint="Status"
            android:padding="15dp"/>
        <EditText
            android:id="@+id/edt_launched_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle"
            android:hint="Launched by"
            android:padding="15dp"/>
        <EditText
            android:id="@+id/edt_ministry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle"
            android:hint="Ministry"
            android:padding="15dp"/>

        <Button
            android:id="@+id/btn_yojana_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Add Yojana Details"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"/>

    </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>